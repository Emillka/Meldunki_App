# Production Environment Configuration
# Skopiuj ten plik jako .env.production i uzupełnij wartości

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# URL twojego projektu Supabase
PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Klucz publiczny Supabase (anon key)
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Klucz service role (tylko dla backend operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Konfiguracja PostgreSQL
POSTGRES_DB=meldunki_production
POSTGRES_USER=meldunki_user
POSTGRES_PASSWORD=your-secure-database-password

# URL połączenia z bazą danych
DATABASE_URL=postgresql://meldunki_user:your-secure-database-password@postgres:5432/meldunki_production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Środowisko aplikacji
NODE_ENV=production

# Port aplikacji (domyślnie 4321 dla Astro)
PORT=4321

# URL aplikacji (dla CORS i redirects)
APP_URL=https://your-domain.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Secret key dla JWT tokens
JWT_SECRET=your-super-secret-jwt-key-here

# Secret key dla sesji
SESSION_SECRET=your-super-secret-session-key-here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN dla error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Grafana admin password
GRAFANA_PASSWORD=your-grafana-admin-password

# ===========================================
# EMAIL CONFIGURATION (opcjonalne)
# ===========================================
# SMTP configuration dla email notifications
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# OpenRouter API key dla AI features
OPENROUTER_API_KEY=your-openrouter-api-key

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# DigitalOcean configuration
DO_HOST=your-droplet-ip
DO_USERNAME=root
DO_SSH_KEY_PATH=/path/to/your/ssh/key

# Production URL dla health checks
PROD_URL=https://your-domain.com

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# AWS S3 dla backupów (opcjonalne)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# ===========================================
# FEATURE FLAGS
# ===========================================
# Włącz/wyłącz funkcje aplikacji
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_BACKUP_AUTOMATION=false
