---
// Strona główna FireLog z shadcn/ui
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
---

<Layout 
  title="FireLog" 
  description="Nowoczesny system do rejestrowania i zarządzania meldunkami dla jednostek Ochotniczej Straży Pożarnej. Zastąp tradycyjne metody cyfrowymi rozwiązaniami."
  keywords="OSP, straż pożarna, meldunki, system, ochotnicza straż pożarna, cyfrowe rozwiązania"
>
  <div style="min-height: 100vh; background-color: var(--md-sys-color-background); display: flex; flex-direction: column;">
    <!-- Header -->
    <Header currentPath="/" />
    
    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-20 text-center">
      <div class="flex justify-center mb-8">
        <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center shadow-lg">
          <span class="material-icons text-primary-foreground text-4xl">local_fire_department</span>
        </div>
      </div>
      
      <h1 class="text-5xl font-bold text-foreground mb-6">
        FireLog
      </h1>
      
      <!-- Public content for non-logged users -->
      <div id="public-content">
        <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
          Nowoczesny system do rejestrowania i zarządzania meldunkami dla jednostek Ochotniczej Straży Pożarnej
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button asChild size="lg" className="text-lg px-8 py-6">
            <a href="/register">
              <span class="material-icons mr-2">person_add</span>
              Rozpocznij teraz
            </a>
          </Button>
          <Button asChild variant="outline" size="lg" className="text-lg px-8 py-6">
            <a href="/login">
              <span class="material-icons mr-2">login</span>
              Zaloguj się
            </a>
          </Button>
        </div>
      </div>
      
      <!-- Logged-in user content -->
      <div id="logged-content" style="display: none;">
        <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
          Witaj w systemie FireLog! Zarządzaj meldunkami swojej jednostki OSP.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button asChild size="lg" className="text-lg px-8 py-6">
            <a href="/meldunki">
              <span class="material-icons mr-2">description</span>
              Zobacz meldunki
            </a>
          </Button>
          <Button asChild variant="outline" size="lg" className="text-lg px-8 py-6">
            <a href="/dashboard">
              <span class="material-icons mr-2">add</span>
              Utwórz meldunek
            </a>
          </Button>
        </div>
      </div>
    </section>

    <!-- About FireLog Section -->
    <section id="about" class="bg-muted/50 py-20">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-foreground mb-4">
            O FireLog
          </h2>
          <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
            Nowoczesne rozwiązanie stworzone specjalnie dla jednostek Ochotniczej Straży Pożarnej. 
            Wszystko czego potrzebujesz do efektywnego zarządzania meldunkami w jednym miejscu.
          </p>
        </div>

        <!-- Why FireLog Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
          <div>
            <h3 class="text-2xl font-bold text-foreground mb-6">
              Dlaczego FireLog?
            </h3>
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <span class="material-icons text-primary text-2xl">check_circle</span>
                <p class="text-foreground">
                  Zastąp papierowe formularze cyfrowymi rozwiązaniami
                </p>
              </div>
              <div class="flex items-center gap-3">
                <span class="material-icons text-primary text-2xl">check_circle</span>
                <p class="text-foreground">
                  Automatyczna analiza i raportowanie
                </p>
              </div>
              <div class="flex items-center gap-3">
                <span class="material-icons text-primary text-2xl">check_circle</span>
                <p class="text-foreground">
                  Łatwe zarządzanie zespołem i uprawnieniami
                </p>
              </div>
              <div class="flex items-center gap-3">
                <span class="material-icons text-primary text-2xl">check_circle</span>
                <p class="text-foreground">
                  Bezpieczne przechowywanie danych
                </p>
              </div>
            </div>
          </div>

          <div class="text-center">
            <div class="w-48 h-48 bg-primary/10 rounded-full flex items-center justify-center mx-auto shadow-lg">
              <span class="material-icons text-primary text-8xl">local_fire_department</span>
            </div>
          </div>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Feature 1 -->
          <Card className="text-center">
            <CardHeader>
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-primary text-3xl">edit_document</span>
              </div>
              <CardTitle>Cyfrowe meldunki</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Twórz i zarządzaj meldunkami w formie cyfrowej. Zastąp papierowe formularze nowoczesnymi rozwiązaniami.
              </p>
            </CardContent>
          </Card>

          <!-- Feature 2 -->
          <Card className="text-center">
            <CardHeader>
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-primary text-3xl">analytics</span>
              </div>
              <CardTitle>Analiza AI</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Automatyczna analiza meldunków z wykorzystaniem sztucznej inteligencji. Otrzymuj cenne wnioski i rekomendacje.
              </p>
            </CardContent>
          </Card>

          <!-- Feature 3 -->
          <Card className="text-center">
            <CardHeader>
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-primary text-3xl">group</span>
              </div>
              <CardTitle>Zarządzanie zespołem</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Zarządzaj członkami jednostki, przydzielaj role i kontroluj dostęp do systemu.
              </p>
            </CardContent>
          </Card>

          <!-- Feature 4 -->
          <Card className="text-center">
            <CardHeader>
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-primary text-3xl">security</span>
              </div>
              <CardTitle>Bezpieczeństwo</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Zaawansowane zabezpieczenia i szyfrowanie danych. Twoje meldunki są bezpieczne.
              </p>
            </CardContent>
          </Card>

          <!-- Feature 5 -->
          <Card className="text-center">
            <CardHeader>
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-primary text-3xl">smartphone</span>
              </div>
              <CardTitle>Responsywność</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Dostęp z każdego urządzenia. Pracuj na komputerze, tablecie lub telefonie.
              </p>
            </CardContent>
          </Card>

          <!-- Feature 6 -->
          <Card className="text-center">
            <CardHeader>
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-primary text-3xl">cloud_sync</span>
              </div>
              <CardTitle>Synchronizacja</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Automatyczna synchronizacja danych w chmurze. Dostęp do meldunków z każdego miejsca.
              </p>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-primary py-20">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold text-primary-foreground mb-4">
          Gotowy na zmianę?
        </h2>
        <p class="text-lg text-primary-foreground mb-8 max-w-2xl mx-auto">
          Dołącz do jednostek OSP, które już korzystają z FireLog i zmodernizuj swoje zarządzanie meldunkami
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button asChild size="lg" variant="secondary" className="text-lg px-8 py-6">
            <a href="/register">
              <span class="material-icons mr-2">rocket_launch</span>
              Rozpocznij teraz
            </a>
          </Button>
          <Button asChild size="lg" variant="outline" className="text-lg px-8 py-6 border-primary-foreground text-primary-foreground hover:bg-primary-foreground hover:text-primary">
            <a href="/login">
              <span class="material-icons mr-2">login</span>
              Zaloguj się
            </a>
          </Button>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <Footer />
  </div>
</Layout>

<style>
  /* Responsive design */
  @media (min-width: 768px) {
    .m3-container > div:first-child {
      flex-direction: row;
    }
    
    .m3-container > div:first-child > div:first-child {
      text-align: left;
    }
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  // ============================================================================
  // MAIN PAGE AUTHENTICATION HANDLING
  // ============================================================================
  
  document.addEventListener('DOMContentLoaded', function() {
    checkAuthAndUpdateContent();
  });
  
  async function checkAuthAndUpdateContent() {
    const token = localStorage.getItem('access_token');
    const publicContent = document.getElementById('public-content');
    const loggedContent = document.getElementById('logged-content');
    
    if (!token) {
      // Not logged in - show public content
      if (publicContent) publicContent.style.display = 'block';
      if (loggedContent) loggedContent.style.display = 'none';
      return;
    }
    
    try {
      // Check if token is valid
      const response = await fetch('/api/auth/profile', {
        method: 'GET',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json'
        }
      });
      
      const result = await response.json();
      
      if (result.success && result.data) {
        // Logged in - show logged content
        if (publicContent) publicContent.style.display = 'none';
        if (loggedContent) loggedContent.style.display = 'block';
      } else {
        // Token is invalid, show public content
        localStorage.removeItem('access_token');
        localStorage.removeItem('refresh_token');
        if (publicContent) publicContent.style.display = 'block';
        if (loggedContent) loggedContent.style.display = 'none';
      }
    } catch (error) {
      console.error('Auth check error:', error);
      // On error, show public content
      if (publicContent) publicContent.style.display = 'block';
      if (loggedContent) loggedContent.style.display = 'none';
    }
  }
</script>