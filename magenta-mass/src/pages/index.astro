---
// Strona główna FireLog z shadcn/ui
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
---

<Layout 
  title="FireLog" 
  description="Nowoczesny system do rejestrowania i zarządzania meldunkami dla jednostek Ochotniczej Straży Pożarnej. Zastąp tradycyjne metody cyfrowymi rozwiązaniami."
  keywords="OSP, straż pożarna, meldunki, system, ochotnicza straż pożarna, cyfrowe rozwiązania"
>
  <div style="min-height: 100vh; background-color: var(--md-sys-color-background); display: flex; flex-direction: column;">
    <!-- Header -->
    <Header currentPath="/" />
    
    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-20 text-center">
      <div class="flex justify-center mb-8">
        <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center shadow-lg">
          <span class="material-icons text-primary-foreground text-4xl">local_fire_department</span>
        </div>
      </div>
      
      <h1 class="text-5xl font-bold text-foreground mb-6">
        FireLog
      </h1>
      
      <!-- Public content for non-logged users -->
      <div id="public-content">
        <p class="text-xl text-muted-foreground mb-4 max-w-2xl mx-auto">
          Nowoczesny system do rejestrowania i zarządzania meldunkami dla jednostek Ochotniczej Straży Pożarnej
        </p>
        <p class="text-lg text-muted-foreground mb-8 max-w-3xl mx-auto">
          Nowoczesne rozwiązanie stworzone specjalnie dla jednostek Ochotniczej Straży Pożarnej. 
          Wszystko czego potrzebujesz do efektywnego zarządzania meldunkami w jednym miejscu.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button asChild size="lg" className="text-lg px-8 py-6">
            <a href="/register">
              <span class="material-icons mr-2">person_add</span>
              Rozpocznij teraz
            </a>
          </Button>
          <Button asChild variant="outline" size="lg" className="text-lg px-8 py-6">
            <a href="/login">
              <span class="material-icons mr-2">login</span>
              Zaloguj się
            </a>
          </Button>
        </div>
      </div>
      
      <!-- Logged-in user content -->
      <div id="logged-content" style="display: none;">
        <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
          Witaj w systemie FireLog! Zarządzaj meldunkami swojej jednostki OSP.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <Button asChild size="lg" className="text-lg px-8 py-6">
            <a href="/meldunki">
              <span class="material-icons mr-2">description</span>
              Zobacz meldunki
            </a>
          </Button>
          <Button asChild variant="outline" size="lg" className="text-lg px-8 py-6">
            <a href="/dashboard">
              <span class="material-icons mr-2">add</span>
              Utwórz meldunek
            </a>
          </Button>
        </div>
      </div>
    </section>

    

    

    <!-- Footer -->
    <Footer />
  </div>
</Layout>

<style>
  /* Responsive design */
  @media (min-width: 768px) {
    .m3-container > div:first-child {
      flex-direction: row;
    }
    
    .m3-container > div:first-child > div:first-child {
      text-align: left;
    }
  }
  
  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  // ============================================================================
  // MAIN PAGE AUTHENTICATION HANDLING
  // ============================================================================
  
  document.addEventListener('DOMContentLoaded', function() {
    checkAuthAndUpdateContent();
  });
  
  async function checkAuthAndUpdateContent() {
    const publicContent = document.getElementById('public-content');
    const loggedContent = document.getElementById('logged-content');
    
    try {
      const { TokenManager } = await import('@/lib/utils/token-manager');
      const { isAuthenticated, user } = await TokenManager.checkAuth();
      
      if (isAuthenticated && user) {
        // Logged in - show logged content
        if (publicContent) publicContent.style.display = 'none';
        if (loggedContent) loggedContent.style.display = 'block';
      } else {
        // Not logged in - show public content
        if (publicContent) publicContent.style.display = 'block';
        if (loggedContent) loggedContent.style.display = 'none';
      }
    } catch (error) {
      console.error('Auth check error:', error);
      // On error, show public content
      if (publicContent) publicContent.style.display = 'block';
      if (loggedContent) loggedContent.style.display = 'none';
    }
  }
</script>// Force cache bust Tue Oct 28 14:03:35 CET 2025
